<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.CheckBoxTreeCell?>
<VBox alignment="center" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.gb.storage.client.ClientController"
      prefHeight="400.0" prefWidth="600.0">
    <HBox VBox.vgrow="ALWAYS" maxWidth="Infinity">
        <VBox fx:id="clientPanel" HBox.hgrow="ALWAYS">
            <HBox maxWidth="Infinity" VBox.vgrow="ALWAYS">
                <Button fx:id="buttClientList" onAction="#newListClient" maxWidth="Infinity" disable="true">Обновить</Button>
                <Button fx:id="buttClientSend" onAction="#sendFileClient" maxWidth="Infinity" disable="true">Отправить</Button>
                <Button fx:id="buttClientMd" onAction="#newDirectoryClient" maxWidth="Infinity" disable="true">Создать папку</Button>
                <Button fx:id="buttClientAdd" onAction="#addFileClient" maxWidth="Infinity" disable="true">Добавить</Button>
            </HBox>
            <Label fx:id="labelClient" text="Client" alignment="CENTER" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            <TreeView fx:id="treeViewClient" maxWidth="Infinity"/>
        </VBox>
        <VBox fx:id="serverPanel" HBox.hgrow="ALWAYS">
            <HBox VBox.vgrow="ALWAYS" maxWidth="Infinity">
                <Button fx:id="buttServerList" onAction="#newListServer" maxWidth="Infinity" disable="true">Обновить</Button>
                <Button fx:id="buttServerReceive" onAction="#receiveFileServer" maxWidth="Infinity" disable="true">Получить</Button>
                <Button fx:id="buttServerDelete" onAction="#deleteFileServer" maxWidth="Infinity" disable="true">Удалить</Button>
            </HBox>
            <Label fx:id="labelServer" text="Server" alignment="CENTER" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            <ListView fx:id="listViewServer" onMouseClicked="#choiceListView" maxWidth="Infinity"/>
        </VBox>
    </HBox>
    <HBox VBox.vgrow="ALWAYS">
    <TextField fx:id="textField" HBox.hgrow="ALWAYS" disable="true"/>
    <Button fx:id="buttClose" onAction="#closeWindow" maxWidth="Infinity">Выход</Button>
    </HBox>
</VBox>
